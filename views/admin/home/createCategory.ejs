<section class="content">
  <div class="container mt-4">
    <div class="info text-right">
      <a
        href="javascript:void(0)"
        class="btn-account dropdown-toggle text-white"
        data-toggle="dropdown"
        id="dropdownMenu"
      >
        Hello - <% if (session.admin_name) { %> <%= session.admin_name %> <% }
        %>
      </a>
      <ul
        class="dropdown-menu dropdown-menu-right"
        aria-labelledby="dropdownMenu"
      >
        <li>
          <a href="?c=users&a=account" class="text-white"
            >Thông tin tài khoản</a
          >
        </li>
        <li role="separator" class="divider"></li>
        <li><a class="text-white" href="?c=auth&a=logout">Thoát</a></li>
      </ul>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
      <h1>Create Category</h1>
    </div>

    <!-- Form to create category -->
    <form action="/admin/create-category" method="POST" class="mt-3">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Category Name:</label>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Enter category name"
            required
          />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
</section>
