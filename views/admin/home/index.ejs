<section class="content">
  <div class="container mt-4">
    <div class="info text-right">
      <a
        href="javascript:void(0)"
        class="btn-account dropdown-toggle text-white"
        data-toggle="dropdown"
        id="dropdownMenu"
      >
        Hello - <% if(session.admin_name) {%> <%= session.admin_name %> <% } %>
      </a>
      <ul
        class="dropdown-menu dropdown-menu-right"
        aria-labelledby="dropdownMenu"
      >
        <li>
          <a href="?c=users&a=account" class="text-white"
            >Thông tin tài khoản</a
          >
        </li>
        <li role="separator" class="divider"></li>
        <li><a class="text-white" href="?c=auth&a=logout">Thoát</a></li>
      </ul>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
      <h1>Management Category</h1>
      <a href="/admin/create-category" class="btn btn-primary"
        >Create Category</a
      >
    </div>

    <!-- Bootstrap styled table -->
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col" style="width: 20%">Id</th>
            <th scope="col" style="width: 60%">Name</th>
            <th scope="col" style="width: 20%; text-align: right">Actions</th>
          </tr>
        </thead>
        <% for(const category of categories) {%>
        <tbody>
          <tr>
            <td><%= category.id%></td>
            <td><%= category.name%></td>
            <td class="text-right">
              <button class="btn btn-warning btn-sm">Edit</button>
              <button class="btn btn-danger btn-sm">Delete</button>
            </td>
          </tr>
        </tbody>
        <% } %>
      </table>
    </div>
  </div>
</section>
